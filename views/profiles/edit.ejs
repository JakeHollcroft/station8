<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit User</h1>
  <div class="form-group">
    <form action="/profiles/<%= profile._id %>?_method=PUT" method="POST">
      <div class="mb-3">
        <label for="name" class="form-label">Name:</label
        ><input
          class="form-control"
          type="text"
          id="name"
          name="profile[name]"
          value="<%= profile.name %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image URL:</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="profile[image]"
          value="<%= profile.image %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="title">Title:</label
        ><input
          class="form-control"
          type="text"
          id="title"
          name="profile[title]"
          value="<%= profile.title %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="quote">Favorite Quote:</label
        ><input
          class="form-control"
          type="text"
          id="quote"
          name="profile[quote]"
          value="<%= profile.quote %>"
        />
      </div>
      <hr />

      <!-- Questions -->
      <div class="card mb-4 mt-4">
        <div class="card-header">Interview Question One</div>
        <div class="card-body">
          <h5 class="card-title">
            What does a typical day look like as a developer with Station 8?
          </h5>
          <p class="card-text">
            <label class="form-label" for="questionOne"></label>
            <textarea
              class="form-control"
              type="text"
              id="questionOne"
              name="profile[questionOne]"
              value="<%= profile.questionOne %>"
            >
            </textarea>
          </p>
        </div>
      </div>

      <div class="card mb-4 mt-4">
        <div class="card-header">Interview Question Two</div>
        <div class="card-body">
          <h5 class="card-title">
            What are some projects I would work on at Station 8?
          </h5>
          <p class="card-text">
            <label class="form-label" for="questionTwo"></label>
            <textarea
              class="form-control"
              type="text"
              id="questionTwo"
              name="profile[questionTwo]"
              value="<%= profile.questionTwo %>"
            ></textarea>
          </p>
        </div>
      </div>

      <div class="card mb-4 mt-4">
        <div class="card-header">Interview Question Three</div>
        <div class="card-body">
          <h5 class="card-title">What does your ideal candidate look like?</h5>
          <p class="card-text">
            <label class="form-label" for="questionThree"></label>
            <textarea
              class="form-control"
              type="text"
              id="questionThree"
              name="profile[questionThree]"
              value="<%= profile.questionThree %>"
            ></textarea>
          </p>
        </div>
      </div>

      <div class="card mb-4 mt-4">
        <div class="card-header">Interview Question Four</div>
        <div class="card-body">
          <h5 class="card-title">
            What are some of the challenges that this position would face?
          </h5>
          <p class="card-text">
            <label class="form-label" for="questionFour"></label>
            <textarea
              class="form-control"
              type="text"
              id="questionFour"
              name="profile[questionFour]"
              value="<%= profile.questionFour %>"
            ></textarea>
          </p>
        </div>
      </div>

      <div class="card mb-4 mt-4">
        <div class="card-header">Interview Question Five</div>
        <div class="card-body">
          <h5 class="card-title">Who would I work closely with?</h5>
          <p class="card-text">
            <label class="form-label" for="questionFive"></label>
            <textarea
              class="form-control"
              type="text"
              id="questionFive"
              name="profile[questionFive]"
              value="<%= profile.questionFive %>"
            ></textarea>
          </p>
        </div>
      </div>

      <div class="card mb-4 mt-4">
        <div class="card-header">Interview Question Six</div>
        <div class="card-body">
          <h5 class="card-title">What is your favorite office tradition?</h5>
          <p class="card-text">
            <label class="form-label" for="questionSix"></label>
            <textarea
              class="form-control"
              type="text"
              id="questionSix"
              name="profile[questionSix]"
              value="<%= profile.questionSix %>"
            ></textarea>
          </p>
        </div>
      </div>

      <div class="mb-3">
        <button class="btn btn-info">Submit Changes</button>
      </div>
    </form>
    <a class="btn btn-primary mb-3" href="/profiles/<%= profile._id %>"
      >Back to User</a
    >
    <a class="btn btn-primary mb-3" href="/profiles">All Users</a>
  </div>
</div>
